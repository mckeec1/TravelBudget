<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.travelbudget.travelbudget.taxes"
    android:background="@drawable/hawaii">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#7bbbff">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText8"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Tax rates" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/button10"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#5154ff"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_marginBottom="10dp" />
    </FrameLayout>

    <EditText
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:id="@+id/editText9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#427dff"
        android:gravity="center"
        android:text="Tax Rate"
        android:layout_marginTop="25dp"
        android:inputType="text" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Options"
        android:onClick="sendMessage"
        android:id="@+id/button11"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:longClickable="true"
        android:textColor="#000"
        android:textStyle="bold"
        android:background="#42a5ff" />
</RelativeLayout>
